<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newpc.myapplication.ViewHIstory"
    android:background="@drawable/pink">


    <TextView
        android:id="@+id/prscrptn_title"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView9"
        android:text="Your History"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignEnd="@+id/prscrptn_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/dob"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/symptom"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/age"
        android:layout_below="@+id/age"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medication"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/symptom"
        android:layout_below="@+id/symptom"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_doctor"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/medication"
        android:layout_below="@+id/medication"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/view_doctor"
        android:layout_below="@+id/view_doctor"
        android:layout_marginTop="33dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prscrptn_title"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:text="Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@+id/prscrptn_title"
        android:text="DoB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="12dp"
        android:text="Age"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/symptom"
        android:layout_alignBottom="@+id/symptom"
        android:layout_alignStart="@+id/textView14"
        android:text="Symptom"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/medication"
        android:layout_alignBottom="@+id/medication"
        android:layout_alignStart="@+id/textView15"
        android:text="Medication"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/view_doctor"
        android:layout_alignBottom="@+id/view_doctor"
        android:layout_alignStart="@+id/textView9"
        android:text="Doctor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_alignStart="@+id/textView16"
        android:text="Date"
        android:textSize="20sp" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView17"
        android:text="Go back to list" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="25dp"
        android:text="Dr. Note"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_alignTop="@+id/textView19"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
