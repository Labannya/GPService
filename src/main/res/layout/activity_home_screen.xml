<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newpc.myapplication.HomeScreen"
    android:background="@drawable/pink">

    <Button
        android:id="@+id/apntmnt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/prscrptn"
        android:layout_marginTop="80dp"
        android:text="Appointment"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="55dp" />

    <Button
        android:id="@+id/prscrptn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/rmndr"
        android:layout_below="@+id/apntmnt"
        android:layout_marginTop="59dp"
        android:text="Prescription"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/rmndr"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/prscrptn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Reminder"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="338dp" />

    <Button
        android:id="@+id/bck"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rmndr"
        android:layout_marginBottom="55dp"
        android:text="Back to Welcome Screen" />
</RelativeLayout>
