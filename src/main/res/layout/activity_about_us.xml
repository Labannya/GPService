<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newpc.myapplication.AboutUsActivity"
    android:background="@drawable/pink">

    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bck"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="103dp"
        android:text="Contact Details"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="355dp" />

    <Button
        android:id="@+id/bck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:layout_marginStart="128dp"
        android:text="Go Back"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="422dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="The surgery assistant app is provided to help you contact X Surgery appointment system.                                                      The app will intruct you to get touch in Surgery to access the surgery system. . " />

</RelativeLayout>
