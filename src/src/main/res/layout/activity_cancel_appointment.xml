<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newpc.myapplication.CancelAppointment">


    <TextView
        android:id="@+id/Cancel_title"
        android:layout_width="299dp"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Your Next Appointment is on"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/Cancel_title"
        android:layout_below="@+id/Cancel_title"
        android:layout_marginTop="47dp"
        android:text="Date"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="46dp"
        android:text="Day"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="44dp"
        android:text="Time"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/textView10"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dayView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/dateView"
        android:layout_alignTop="@+id/textView11"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/dayView"
        android:layout_alignTop="@+id/textView12" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginBottom="20dp"
        android:text="Cancel Appointment" />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/cancel"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/cancel"
        android:text="Go Back" />
</RelativeLayout>
